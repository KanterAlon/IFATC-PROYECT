@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron">
    <h1 class="display-4">Welcome to IFATC PROYECT</h1>
    <p class="lead">This is the official application for managing IFATC training sessions, users, and feedback. Navigate through the sections below to manage your data.</p>
    <hr class="my-4">
    <p>Use the buttons below to explore the different sections of the application.</p>
    <a class="btn btn-primary btn-lg" href="@Url.Action("Sessions", "Home")" role="button">Manage Sessions</a>
    <a class="btn btn-secondary btn-lg" href="@Url.Action("Users", "Home")" role="button">Manage Users</a>
    <a class="btn btn-info btn-lg" href="@Url.Action("Feedback", "Home")" role="button">View Feedback</a>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Sessions</h5>
                <p class="card-text">Create and manage training sessions for IFATC trainees and trainers.</p>
                <a href="@Url.Action("Sessions", "Home")" class="btn btn-primary">Go to Sessions</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Users</h5>
                <p class="card-text">View and manage users involved in the IFATC training process.</p>
                <a href="@Url.Action("Users", "Home")" class="btn btn-secondary">Go to Users</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Feedback</h5>
                <p class="card-text">Review and manage feedback provided by evaluators after each session.</p>
                <a href="@Url.Action("Feedback", "Home")" class="btn btn-info">Go to Feedback</a>
            </div>
        </div>
    </div>
</div>
